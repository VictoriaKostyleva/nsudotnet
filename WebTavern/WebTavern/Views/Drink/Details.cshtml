@model WebTavern.Models.ViewModels.DrinkDetails

@{
    ViewBag.Title = "Details";
}

@{
    List<String> ingredients = Model.Ingredients;
}

<h2>Details</h2>

<div>
    <h4>Drink</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Drink.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Drink.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Drink.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Drink.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>

        @foreach (var item in ingredients)
        {
        <dd>
            @item
        </dd>
        }
        
        @if (Model.Drink.Image != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Drink.Image)
            </dt>

            <dd>
                @Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(Model.Drink.Image) + "\" />")
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Drink.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
